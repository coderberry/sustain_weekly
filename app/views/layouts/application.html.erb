<!DOCTYPE html>
<html>
  <head>
    <title>SustainWeekly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      Logged in as <%= current_user.name %>. <%= link_to "Logout", logout_path %>
    <% else %>
      <a href="/auth/github">Login</a>
    <% end %>
    <%= yield %>
  </body>
</html>
